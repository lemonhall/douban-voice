{
  "name" : "语音Voice",
  "manifest_version": 2,
  "version" : "0.1",
  "description" : "语音Voice",
  "browser_action": {
      "default_icon": "doubanicon-24.png",
      "default_title": "语音Voice"
  },
  "icons": { "16": "icon-voice-16.png",
           "48": "icon-voice-48.png",
          "128": "icon-voice-128.png" },
  "background": {
     "scripts": ["lib/jquery-1.7.2.min.js",
                 "lib/underscore-min.js",
                 "douban/common.js",
                 "douban/savToSina.js",
                 "douban/bg.js"]
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.douban.com/update/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "douban/common.js",
              "douban/update.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://www.douban.com/note/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js",
              "douban/createNote.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://t.qq.com/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js"
              ,"tqq/tqq.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://weibo.com/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js"
              ,"weibo/weibo.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://guide.renren.com/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js",
              "renren/renren.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
    "permissions": [
        "tabs",	
        "background",
        "http://www.douban.com/*",
        "http://api.douban.com/people/*",
        "http://t.qq.com/*",
        "http://weibo.com/*",
        "http://guide.renren.com/*",
        "http://img1.douban.com/*",
        "http://1.lemonvoice.sinaapp.com/"
    ],
    "web_accessible_resources": [
        "images/ico-voice.gif",
        "images/tqq_voice.png",
        "test.wav",
        "raphaelicons-webfont.svg"
    ]
}
