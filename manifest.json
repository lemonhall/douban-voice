{
  "name" : "语音Voice",
  "manifest_version": 2,
  "version" : "0.1",
  "description" : "语音Voice",
  "browser_action": {
      "default_icon": "doubanicon-24.png",
      "default_title": "语音Voice"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.douban.com/update/*"
      ],
      "js" : ["jquery-1.7.2.min.js","underscore-min.js","update.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://t.qq.com/*"
      ],
      "js" : ["jquery-1.7.2.min.js","underscore-min.js","tqq.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://weibo.com/*"
      ],
      "js" : ["jquery-1.7.2.min.js","underscore-min.js","weibo.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://guide.renren.com/*"
      ],
      "js" : ["jquery-1.7.2.min.js","underscore-min.js","renren.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://www.douban.com/note/*"
      ],
      "js" : ["jquery-1.7.2.min.js","underscore-min.js","createNote.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
    "permissions": [
        "tabs",	
        "http://www.douban.com/*",
        "http://api.douban.com/people/*",
        "http://t.qq.com/*",
        "http://weibo.com/*",
        "http://guide.renren.com/*"
    ],
    "web_accessible_resources": [
        "images/ico-voice.gif",
        "images/tqq_voice.png",
        "test.wav",
        "voice_font.svg"
    ]
}
